{
    "manifestVersion": 1,
    "id": "ADO_WorkItems_Dependencies",
    "version": "1.0.4",
    "name": "Make Dependencies Betwines WorkItems",
    "scopes": [
        "vso.work_write"
    ],
    "description": "Give you the ability to make Dependencies that hod the continues of flow, base on Other work item.",
    "publisher": "AviHadad",
    "icons": {
        "default": "img/logo.png"
    },
    "targets": [{
        "id": "Microsoft.VisualStudio.Services",
        "version": "[15.0,)"
    }],
    "tags": [
        "Work Item",
        "Work Item control",
        "Usability",
        "Dependencies"
    ],
    "content": {
        "details": {
            "path": "details.md"
        },
        "license": {
            "path": "LICENSE.md"
        },
        "privacy": {
            "path": "PRIVACY.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/avih75/AdoWorkItemDependencies"
    },
    "links": {
        "support": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies/issues"
        },
        "license": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies/blob/master/LICENSE.md"
        },
        "privacypolicy": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies/blob/master/PRIVACY.md"
        },
        "learn": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies/blob/master/README.md"
        },
        "repository": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies"
        },
        "issues": {
            "uri": "https://github.com/avih75/AdoWorkItemDependencies/issues"
        }
    },
    "files": [{
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "dependenciesIndex.html",
            "addressable": true
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "contributions": [{
        "id": "Dependencies",
        "description": "Add an block option whene dependencies work items arnt done.",
        "type": "ms.vss-work-web.work-item-form-control",
        "targets": [
            "ms.vss-work-web.work-item-form"
        ],
        "properties": {
            "name": "Workitems Dependencies",
            "uri": "dependenciesIndex.html",
            "inputs": [{
                "id": "ListBlockedState",
                "name": "Blocked State List",
                "description": "list of state need to be block (state that cant be rich seperated by ';' ).",
                "type": "TextArea",
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }, {
                "id": "RelBlocekd",
                "name": "Field To Approve",
                "description": "The Field require Approve",
                "type": "TextArea", 
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }, {
                "id": "DependOnState",
                "name": "Approved Value Field",
                "description": "Field that keep the last Approved value",
                "type": "TextArea", 
                "validation": {
                    "dataType": "String",
                    "isRequired": true
                }
            }]
        }
    }]
}